<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="horizontal"
    android:gravity="center">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <TextView
            android:id="@+id/MainTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="00:00"
            android:textColor="@color/breakTimerColor"
            android:textSize="@dimen/sw720dp_land_timer_font_size"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/round_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/break_text"
            android:textColor="@color/breakTimerColor"
            android:textSize="@dimen/sw720dp_land_round_counter_size" />

        <Button
            android:id="@+id/break_pause_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:bottomRightRadius="10dp"
            android:bottomLeftRadius="10dp"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            android:text="@string/pause"
            android:textSize="@dimen/sw720dp_land_button_text_size" />

        <Button
            android:id="@+id/break_resume_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:bottomRightRadius="10dp"
            android:bottomLeftRadius="10dp"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            android:text="@string/resume"
            android:textSize="@dimen/sw720dp_land_button_text_size"
            android:visibility="gone" />

        <Button
            android:id="@+id/break_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:text="@string/cancel"
            android:textSize="@dimen/sw720dp_land_button_text_size"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp" />

    </LinearLayout>
</LinearLayout>

